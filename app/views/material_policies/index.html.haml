-provide :header_title, icon('home',t('menu.material_policies'))
.toolbox.btn-item
  = create_button t('items.add'), new_material_policy_path, icon: 'plus'
%table.table.table-hover.table-striped
  %thead
    %tr
      %th
        \#
      %th
        = t 'material_policies.number'
      %th
        = t 'material_policies.client'
      %th
        = t 'material_policies.sign_date'
      %th
        = t 'material_policies.begin_date'
      %th
        = t 'material_policies.expire_date'
      %th
        = t 'helpers.actions'
  %tbody
    - @policies.each_with_index do |policy, index|
      %tr
        %td
          = index+1
        %td
          = policy.number
        %td
          = link_to policy.client.full_name, policy.client
        %td
          = policy.sign_date.strftime('%d-%m-%Y')
        %td
          = policy.begin_date.strftime('%d-%m-%Y')
        %td
          = policy.expire_date.strftime('%d-%m-%Y')
        %td
          .btn-group
            = create_button t('helpers.details'), material_policy_path(policy), icon: 'bars'
            = create_button t('helpers.edit'), edit_material_policy_path(policy), icon: 'pencil'
            = create_button t('helpers.delete'), material_policy_path(policy), method: :delete, data: { confirm: t('material_policies.delete_confirm', policy: policy.number) }, icon: 'trash'
        