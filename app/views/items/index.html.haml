-provide :header_title, icon('tag',t('menu.items'))
.toolbox.btn-item
  = create_button t('items.add'), new_item_path, icon: 'plus'
%table.table.table-hover.table-striped
  %thead
    %tr
      %th
        \#
      %th
        = t 'items.name'
      %th
        = t 'items.group'
      %th
        = t 'items.description'
      %th
        = t 'helpers.actions'
  %tbody
    - @items.each_with_index do |item, index|
      %tr
        %td
          = index+1
        %td
          = item.name
        %td
          = link_to item.group.name, item.group
        %td
          = item.description
        %td
          .btn-group
            = create_button t('helpers.details'), item_path(item), icon: 'bars'
            = create_button t('helpers.edit'), edit_item_path(item), icon: 'pencil'
            = create_button t('helpers.delete'), item_path(item), method: :delete, data: { confirm: t('items.delete_confirm', item: item.name) }, icon: 'trash'